<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


<!-- Bean for Actor class and Construction injection -->
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" type="java.lang.String" value="Sindhu" />
        <constructor-arg name="gender" value="female"/>
        <constructor-arg name="age" value="23"/>
    </bean>

 <!-- Bean for Actor class and Construction injection -->
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name"  index="0" type="java.lang.String" value="Minnu"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="26"/>
    </bean>

<!-- Bean for Actor class and Construction injection -->
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" type="java.lang.String" value="Sarah" />
        <constructor-arg name="gender" value="female"/>
        <constructor-arg name="age" value="6"/>
    </bean>

    <bean name="movie" class="com.stackroute.domain.Movie"   autowire="byName"> </bean>


</beans>
